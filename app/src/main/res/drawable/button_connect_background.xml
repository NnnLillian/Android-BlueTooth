<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/colorYellow"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>

            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"/>

            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item android:state_activated="false">
        <shape>
            <solid android:color="@color/colorRed"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>

            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"/>

            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>